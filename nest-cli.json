{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/auth/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/auth/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/auth",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "customer": {
      "type": "application",
      "root": "apps/customer",
      "entryFile": "main",
      "sourceRoot": "apps/customer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    },
    "driver": {
      "type": "application",
      "root": "apps/driver",
      "entryFile": "main",
      "sourceRoot": "apps/driver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver/tsconfig.app.json"
      }
    },
    "customer-info-receiver": {
      "type": "application",
      "root": "apps/customer-info-receiver",
      "entryFile": "main",
      "sourceRoot": "apps/customer-info-receiver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer-info-receiver/tsconfig.app.json"
      }
    },
    "driver-status-tracker": {
      "type": "application",
      "root": "apps/driver-status-tracker",
      "entryFile": "main",
      "sourceRoot": "apps/driver-status-tracker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver-status-tracker/tsconfig.app.json"
      }
    },
    "customer-address-positioning": {
      "type": "application",
      "root": "apps/customer-address-positioning",
      "entryFile": "main",
      "sourceRoot": "apps/customer-address-positioning/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer-address-positioning/tsconfig.app.json"
      }
    },
    "customer-reliability": {
      "type": "application",
      "root": "apps/customer-reliability",
      "entryFile": "main",
      "sourceRoot": "apps/customer-reliability/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer-reliability/tsconfig.app.json"
      }
    }
  }
}